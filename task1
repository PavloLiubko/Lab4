#include <iostream>
#include <cmath>

int main()
{
    setlocale(LC_ALL, "RU"); // українського кодування на жаль не знайшов 
    
    int f1, f2, a;

    std::cout << "Введіть модуль першої сили:";
    std::cin >> f1;
    std::cout << "\n";

    std::cout << "Введіть модуль другої сили:";
    std::cin >> f2;
    std::cout << "\n";

    std::cout << "Введіть значення кута між цими двома силами(в градусах):";
    std::cin >> a;
    std::cout << "\n";

    double R = sqrt(pow(f1, 2) + pow(f2, 2) + 2 * f1 * f2 * cos(a));

    std::cout << "Ваша рівнодіюча = " << R;


    return 0;
}
